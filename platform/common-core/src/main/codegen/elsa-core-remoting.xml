<?xml version="1.0" encoding="UTF-8"?>
<remoting xmlns="http://vga.com/elsa/meta-remoting" id="core" >
    <enum id="com.vga.platform.elsa.common.rest.core.RemotingEntityValueType">
        <enum-item id="STRING"/>
        <enum-item id="LOCAL_DATE"/>
        <enum-item id="LOCAL_DATE_TIME"/>
        <enum-item id="ENUM"/>
        <enum-item id="CLASS"/>
        <enum-item id="BOOLEAN"/>
        <enum-item id="BYTE_ARRAY"/>
        <enum-item id="ENTITY"/>
        <enum-item id="ENTITY_REFERENCE"/>
        <enum-item id="LONG"/>
        <enum-item id="INT"/>
        <enum-item id="BIG_DECIMAL"/>
    </enum>
    <enum id="com.vga.platform.elsa.common.rest.core.RemotingMessageType">
        <enum-item id="PING"/>
        <enum-item id="SUBSCRIPTION"/>
    </enum>
    <entity id="com.vga.platform.elsa.common.rest.core.ClientResponse">
        <property id="errorMessage" type="STRING"/>
        <property id="requestId" type="STRING"/>
        <property id="responseStr" type="STRING"/>
    </entity>
    <entity id="com.vga.platform.elsa.common.rest.core.RemotingMessage">
        <property id="type" type="ENUM"  class-name="com.vga.platform.elsa.common.rest.core.RemotingMessageType" non-nullable="true"/>
        <property id="subscriptionId" type="STRING"/>
        <property id="callId" type="STRING"/>
        <property id="groupId" type="STRING"/>
        <property id="methodId" type="STRING"/>
        <property id="data" type="STRING" non-nullable="true"/>
    </entity>
    <entity id="com.vga.platform.elsa.common.rest.core.RemotingEntityPropertyDescription">
        <property id="type" type="ENUM"  class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityValueType" non-nullable="true"/>
        <property id="id" type="STRING" non-nullable="true"/>
        <property id="className" type="STRING"/>
        <property id="isAbstract" type="BOOLEAN" non-nullable="true"/>
    </entity>
    <entity id="com.vga.platform.elsa.common.rest.core.RemotingEntityCollectionDescription">
        <property id="elementType" type="ENUM"  class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityValueType" non-nullable="true"/>
        <property id="id" type="STRING" non-nullable="true"/>
        <property id="elementClassName" type="STRING"/>
        <property id="elementIsAbstract" type="BOOLEAN" non-nullable="true"/>
    </entity>
    <entity id="com.vga.platform.elsa.common.rest.core.RemotingEntityMapDescription">
        <property id="id" type="STRING" non-nullable="true"/>
        <property id="keyType" type="ENUM"  class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityValueType" non-nullable="true"/>
        <property id="keyIsAbstract" type="BOOLEAN" non-nullable="true"/>
        <property id="keyClassName" type="STRING"/>
        <property id="valueType" type="ENUM"  class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityValueType" non-nullable="true"/>
        <property id="valueClassName" type="STRING"/>
        <property id="valueIsAbstract" type="BOOLEAN" non-nullable="true"/>
    </entity>
    <entity id="com.vga.platform.elsa.common.rest.core.RemotingEntityDescription">
        <collection id="properties" element-type="ENTITY" element-class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityPropertyDescription"/>
        <collection id="collections" element-type="ENTITY" element-class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityCollectionDescription"/>
        <collection id="maps" element-type="ENTITY" element-class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityMapDescription"/>
    </entity>
    <group id="l10n">
        <server-call id="get-bundle">
            <request id="com.vga.platform.elsa.common.remoting.core.GetL10nBundleRequest">
                <property id="language" type="STRING"/>
                <property id="bundleId" type="STRING"/>
            </request>
            <response id="com.vga.platform.elsa.common.remoting.core.GetL10nBundleResponse">
                <map id="messages" key-type="STRING" value-type="STRING"/>
            </response>
        </server-call>
    </group>
    <group id="meta">
        <server-call id="get-server-call-description">
            <request id="com.vga.platform.elsa.common.rest.core.GetServerCallDescriptionRequest">
                <property id="remotingId" type="STRING" non-nullable="true"/>
                <property id="groupId" type="STRING" non-nullable="true"/>
                <property id="methodId" type="STRING" non-nullable="true"/>
            </request>
            <response id="com.vga.platform.elsa.common.rest.core.GetServerCallDescriptionResponse">
                <property id="requestClassName" type="STRING"/>
                <property id="responseClassName" type="STRING"/>
            </response>
        </server-call>
        <server-call id="get-subscription-description">
            <request id="com.vga.platform.elsa.common.rest.core.GetSubscriptionDescriptionRequest">
                <property id="remotingId" type="STRING" non-nullable="true"/>
                <property id="groupId" type="STRING" non-nullable="true"/>
                <property id="subscriptionId" type="STRING" non-nullable="true"/>
            </request>
            <response id="com.vga.platform.elsa.common.rest.core.GetSubscriptionDescriptionResponse">
                <property id="parameterClassName" type="STRING"/>
                <property id="eventClassName" type="STRING"/>
            </response>
        </server-call>
        <server-call id="get-entity-description">
            <request id="com.vga.platform.elsa.common.rest.core.GetRemotingEntityDescriptionRequest">
                <property id="entityId" type="STRING" non-nullable="true"/>
            </request>
            <response id="com.vga.platform.elsa.common.rest.core.GetRemotingEntityDescriptionResponse">
                <property id="description" type="ENTITY" non-nullable="true" class-name="com.vga.platform.elsa.common.rest.core.RemotingEntityDescription"/>
            </response>
        </server-call>
    </group>
</remoting>